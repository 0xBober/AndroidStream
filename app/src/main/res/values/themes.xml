<resources>
    <style name="AndroidTest" parent="Theme.AppCompat.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/light</item>
    </style>

    <style name="AndroidTest.button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/blue</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:paddingVertical">15dp</item>
    </style>

    <style name="AndroidTest.button.error" parent="AndroidTest.button">
        <item name="android:background">@color/red</item>
    </style>
</resources>